{
  "name": "food_sharey",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "yarn build:js && yarn build:css",
    "build:js": "node esbuild.config.mjs",
    "build:css": "node node_modules/tailwindcss/lib/cli.js -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css",
    "watch": "yarn watch:js & yarn watch:css",
    "watch:js": "node esbuild.config.mjs --watch",
    "watch:css": "node node_modules/tailwindcss/lib/cli.js -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@rails/actioncable": "^7.0.0",
    "@rails/activestorage": "^7.0.0",
    "@rails/ujs": "^7.0.0",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.17.0",
    "tailwindcss": "^4.1.18"
  }
}
